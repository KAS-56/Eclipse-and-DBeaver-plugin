<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.jkiss.dbeaver.core.category"
            class="ru.tensor.explain.dbeaver.views.PostgresPlanView"
            icon="icons/EP.png"
            id="ru.tensor.explain.dbeaver.planView"
            name="Explain PostgreSQL"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.jkiss.dbeaver.core.sql"
            id="ru.tensor.explain.dbeaver.formatSQL"
            name="Format SQL">
      </command>
      <command
            categoryId="org.jkiss.dbeaver.core.sql"
            id="ru.tensor.explain.dbeaver.explain"
            name="Explain Analyze">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ru.tensor.explain.dbeaver.handlers.FormatSQLhandler"
            commandId="ru.tensor.explain.dbeaver.formatSQL">
         <enabledWhen>
            <with
                  variable="activeEditor">
               <instanceof
                     value="org.jkiss.dbeaver.ui.editors.sql.SQLEditor">
               </instanceof>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="ru.tensor.explain.dbeaver.handlers.ExplainHandler"
            commandId="ru.tensor.explain.dbeaver.explain">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:edit?before=additions">
         <command
               commandId="ru.tensor.explain.dbeaver.formatSQL"
               icon="icons/EP.png"
               id="ru.tensor.explain.dbeaver.menus.formatCommand"
               label="Format SQL"
               mnemonic="S"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?before=group.copy">
         <command
               commandId="ru.tensor.explain.dbeaver.formatSQL"
               icon="icons/EP.png"
               id="ru.tensor.explain.dbeaver.menus.formatCommand"
               label="Format SQL"
               mnemonic="S"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeEditor">
                  <instanceof
                        value="org.jkiss.dbeaver.ui.editors.sql.SQLEditor">
                  </instanceof>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="ru.tensor.explain.dbeaver.explain"
               icon="icons/EP.png"
               label="Explain Analyze"
               mnemonic="E"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeEditor">
                  <adapt
                        type="org.jkiss.dbeaver.ui.editors.sql.SQLEditor">
                     <test
                           property="org.jkiss.dbeaver.ui.editors.sql.canExplain">
                     </test>
                  </adapt>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="ru.tensor.explain.dbeaver.preferences.PreferencePage"
            id="ru.tensor.explain.dbeaver.preferences.PreferencePage"
            name="Explain PostgreSQL">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="ru.tensor.explain.dbeaver.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.jkiss.dbeaver.core.perspective">
         <view
               id="ru.tensor.explain.dbeaver.planView"
               minimized="false"
               relationship="bottom">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
